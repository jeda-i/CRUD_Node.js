<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>

  <style>
    #tabela {
      font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    #tabela td, #tabela th {
      border: 1px solid #ddd;
      padding: 8px;
    }
    
    #tabela tr:nth-child(even){background-color: #f2f2f2;}
    
    #tabela tr:hover {background-color: #ddd;}
    
    #tabela th {
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: left;
      background-color: rgb(64, 19, 226);
      color: white;
    }
    </style>
</head>
<body>
 
<h2>Registros</h2>
  <table border="1" id='tabela'>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Data de nascimento</th>
            <th>RG</th>
            <th>CPF</th>
            <th>Carteira de habilitação</th>
            <th>CEP</th>
            <th>Endereço</th>
            <th>Grupo de risco</th>
            <th>Pedido</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
    <% data.forEach(function(details) { %>
        <tr>
            <td><%= details.name %></td>
            <td><%= details.surname %></td>
            <td><%= details.birthday %></td>
            <td><%= details.rg %></td>
            <td><%= details.cpf %></td>
            <td><%= details.cnh %></td>
            <td><%= details.cep %></td>
            <td><%= details.address %></td>
            <% if(details.risk_group == 'on'){ %>
                <td>Sim</td>
            <% } %>
            <% if(details.risk_group != 'on'){ %>
                <td>Não</td>
            <% } %>
            <td><%= details.pedido %></td>
            <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <br>
  <button><a href="/">Novo</a></button>
</body>
</html>